<?xml version="1.0" encoding="utf-8"?>
<config ver="1.0">
    <input-dir>./green_tripdata_2017</input-dir>
    <output>green_tripdata_2017</output>
    <output-dir>./output</output-dir>
    <schema>
        <categorical index="Passenger_count" type="sequential" name="passenger_count">
            <attributes>
                <min>1</min>
                <max>4</max>
            </attributes>
        </categorical>

        <categorical index="RateCodeID" type="sequential" name="rate_code_id">
            <attributes>
                <min>1</min>
                <max>6</max>
            </attributes>
        </categorical>

        <categorical index="Payment_type" type="sequential" name="payment_type">
            <attributes>
                <min>1</min>
                <max>6</max>
            </attributes>
        </categorical>

        <spatial index-lat="Pickup_latitude" index-lon="Pickup_longitude" name="pickup">
            <attributes>
                <bin>1</bin>
            </attributes>
        </spatial>

        <spatial index-lat="Dropoff_latitude" index-lon="Dropoff_longitude" name="dropoff">
            <attributes>
                <bin>1</bin>
            </attributes>
        </spatial>

        <temporal index="lpep_pickup_datetime" name="pickup_datetime">
            <attributes>
                <format>%Y-%m-%d %H:%M:%S</format>
                <interval>86400</interval>
            </attributes>
        </temporal>

        <temporal index="Lpep_dropoff_datetime" name="dropoff_datetime">
            <attributes>
                <format>%Y-%m-%d %H:%M:%S</format>
                <interval>86400</interval>
            </attributes>
        </temporal>

        <payload index="Trip_distance" name="trip_distance">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="Fare_amount" name="fare_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="Tip_amount" name="tip_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="Total_amount" name="total_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>
    </schema>
</config>
