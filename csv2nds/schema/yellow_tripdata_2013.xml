<?xml version="1.0" encoding="utf-8"?>
<config ver="1.0">
    <input-dir>/home/cicerolp/data/yellow_tripdata_2013</input-dir>
    <output>yellow_tripdata_2013</output>
    <output-dir>./output</output-dir>
    <schema>
        <categorical index="passenger_count" type="sequential" name="passenger_count">
            <attributes>
                <min>1</min>
                <max>4</max>
            </attributes>
        </categorical>

        <categorical index="rate_code" type="sequential" name="rate_code_id">
            <attributes>
                <min>1</min>
                <max>6</max>
            </attributes>
        </categorical>

        <categorical index="payment_type" type="sequential" name="payment_type">
            <attributes>
                <min>1</min>
                <max>6</max>
            </attributes>
        </categorical>

        <spatial index-lat="pickup_latitude" index-lon="pickup_longitude" name="pickup">
            <attributes>
                <bin>1</bin>
            </attributes>
        </spatial>

        <spatial index-lat="dropoff_latitude" index-lon="dropoff_longitude" name="dropoff">
            <attributes>
                <bin>1</bin>
            </attributes>
        </spatial>

        <temporal index="pickup_datetime" name="pickup_datetime">
            <attributes>
                <format>%Y-%m-%d %H:%M:%S</format>
                <interval>86400</interval>
            </attributes>
        </temporal>

        <temporal index="dropoff_datetime" name="dropoff_datetime">
            <attributes>
                <format>%Y-%m-%d %H:%M:%S</format>
                <interval>86400</interval>
            </attributes>
        </temporal>

        <payload index="trip_distance" name="trip_distance">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="fare_amount" name="fare_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="tip_amount" name="tip_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="total_amount" name="total_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>
    </schema>
</config>
