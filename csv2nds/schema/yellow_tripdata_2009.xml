<?xml version="1.0" encoding="utf-8"?>
<config ver="1.0">
    <input-dir>./yellow_tripdata_2009</input-dir>
    <output>yellow_tripdata_2009</output>
    <output-dir>./output</output-dir>
    <schema>
        <categorical index="Passenger_Count" type="sequential" name="passenger_count">
            <attributes>
                <min>1</min>
                <max>4</max>
            </attributes>
        </categorical>

        <categorical index="Rate_Code" type="sequential" name="rate_code_id">
            <attributes>
                <min>1</min>
                <max>6</max>
            </attributes>
        </categorical>

        <categorical index="Payment_Type" type="discrete" name="payment_type">
            <attributes>
                <bin>Credit</bin>
                <bin>Cash</bin>
                <bin>No Charge</bin>
                <bin>Dispute</bin>
                <bin>Voided trip</bin>
                <bin>Unknown</bin>
            </attributes>
        </categorical>

        <spatial index-lat="Start_Lat" index-lon="Start_Lon" name="pickup">
            <attributes>
                <bin>1</bin>
            </attributes>
        </spatial>

        <spatial index-lat="End_Lat" index-lon="End_Lon" name="dropoff">
            <attributes>
                <bin>1</bin>
            </attributes>
        </spatial>

        <temporal index="Trip_Pickup_DateTime" name="pickup_datetime">
            <attributes>
                <format>%Y-%m-%d %H:%M:%S</format>
                <interval>86400</interval>
            </attributes>
        </temporal>

        <temporal index="Trip_Dropoff_DateTime" name="dropoff_datetime">
            <attributes>
                <format>%Y-%m-%d %H:%M:%S</format>
                <interval>86400</interval>
            </attributes>
        </temporal>

        <payload index="Trip_distance" name="trip_distance">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="Fare_Amt" name="fare_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="Tip_Amt" name="tip_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="Total_Amt" name="total_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>
    </schema>
</config>
