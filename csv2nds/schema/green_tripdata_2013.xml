<?xml version="1.0" encoding="utf-8"?>
<config ver="1.0">
    <input lines-to-skip="2">./data/green_tripdata_2013-08.csv</input>
    <output>green_tripdata_2013-08</output>
    <output-dir>./output</output-dir>
    <schema>
        <temporal index="1" name="pickup_datetime">
            <attributes>
                <format>%Y-%m-%d %H:%M:%S</format>
                <interval>86400</interval>
            </attributes>
        </temporal>

        <temporal index="2" name="dropoff_datetime">
            <attributes>
                <format>%Y-%m-%d %H:%M:%S</format>
                <interval>86400</interval>
            </attributes>
        </temporal>

        <categorical index="4" type="sequential" name="rate_code_id">
            <attributes>
                <min>1</min>
                <max>6</max>
            </attributes>
        </categorical>

        <spatial index-lat="6" index-lon="5" name="pickup">
            <attributes>
                <bin>1</bin>
            </attributes>
        </spatial>

        <spatial index-lat="8" index-lon="7" name="dropoff">
            <attributes>
                <bin>1</bin>
            </attributes>
        </spatial>

        <categorical index="9" type="sequential" name="passenger_count">
            <attributes>
                <min>1</min>
                <max>4</max>
            </attributes>
        </categorical>

        <payload index="10" name="trip_distance">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="11" name="fare_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="14" name="tip_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>

        <payload index="17" name="total_amount">
            <attributes>
                <type>0</type>
            </attributes>
        </payload>
    </schema>
</config>
